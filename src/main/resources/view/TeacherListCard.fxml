<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="teacherCardPane" fx:id="teacherCardPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" percentWidth="60.0" prefWidth="200.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="40.0" prefWidth="150.0" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="100.0" prefWidth="150.0" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="id" styleClass="cell_big_label" wrapText="true">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" styleClass="cell_big_label" text="\$first" wrapText="true" />
            </HBox>
            <HBox prefHeight="0.0" prefWidth="130.0">
                <children>
                    <Label fx:id="involvement" styleClass="cell_small_label" text="\$involvement" wrapText="true">
                        <HBox.margin>
                            <Insets left="4.0" />
                        </HBox.margin></Label>
                </children>
            </HBox>
            <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" wrapText="true" />
            <Label fx:id="email" styleClass="cell_small_label" text="\$email" wrapText="true" />
            <Label fx:id="gender" styleClass="cell_small_label" text="\$gender" wrapText="true" />
              <Label fx:id="officeTable" styleClass="cell_small_label" text="\$officeTable" wrapText="true" />
        </VBox>
      <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding>
         <children>
                <FlowPane fx:id="tags" alignment="TOP_RIGHT" nodeOrientation="LEFT_TO_RIGHT">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
                </FlowPane>
         </children>
      </HBox>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>
</HBox>
